<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Strongholds</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Strongholds.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="margin-right:5px">Strongholds <span class="text-muted">Demo Client</span></a> <span class="badge bg-secondary" style="margin-bottom:10pt; font-size:x-small;">v0.1.0</span>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                     @{var isLoggedIn = Context.Session.GetString("token") != null;}

                    <ul class="navbar-nav flex-grow-1">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Game" asp-action="Index">Play</a>
                            </li>
                        }
                        
                    </ul>
                    <ul class="navbar-nav">

                        @if(isLoggedIn) {
                            <li class="nav-item">
                                <div class="nav-link text-dark">Logged in as <b>@Context.Session.GetString("username")</b></div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        } else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="SignUp">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="border-top-color: rgb(66, 69, 69) !important">
        <div class="container">
            &copy; 2022 - Strongholds - <a href="https://github.com/danpodbury/strongholds">Dan Podbury</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
